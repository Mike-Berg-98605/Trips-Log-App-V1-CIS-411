@model TripViewModel

<h1>Add info for the @Model.TripDetail.Accomodations</h1>
<form asp-action="Add">
    <input type="hidden" asp-for="PageNumber" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TripDetail.PhoneNumber">Phone Number:</label>
        <input asp-for="TripDetail.PhoneNumber" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="TripDetail.Email">Email:</label>
        <input asp-for="TripDetail.Email" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>