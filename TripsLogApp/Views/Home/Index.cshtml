@model List<TripDetail>

<a asp-controller="Trip" asp-action="Add">Add Trip</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accomodations</th>
            <th>Things To Do:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate.ToShortDateString()</td>
                <td>@trip.EndDate.ToShortDateString()</td>
                <td>@trip.Accomodations</td>
                <td>@trip.FirstThingToDo <br />@trip.SecondThingToDo <br />@trip.ThirdThingToDo</td>
            </tr>
        }
    </tbody>
</table>