@{
    string message = TempData["message"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TripsLogApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header class="jumbotron jumbotron-fluid">
            <h1 class="mt-3 d-flex justify-content-center">My Trip Log</h1>
            <h3 class="d-flex justify-content-center">Oh The Memories</h3>
        </header>
    </div>
    <div class="container">
        <main role="main">
            @if (!string.IsNullOrEmpty(message))
            {
                <h3>class="bg-light text-center p-2 mb-1"@message</h3>
            }
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <h5>The Trips Logs App. Let's See How Challenging Building This Will Be!!!'</h5>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
